@model EntityLayer.Concreate.Content
@{
    ViewBag.Title = "AddContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>-İçerik Girişi-</h2>


@using (Html.BeginForm("AddContent", "WriterPanelContent", FormMethod.Post))
{
    <div class="form-group">

        <input type="text"  name="HeadingID" value="@ViewBag.d"/>
        @Html.Label("Yazınız")
        @Html.TextAreaFor(x => x.ContentValue,5,30, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ContentValue, "", new { @class = "text-danger" })
        <br />

        <button class="btn btn-primary">Kaydet </button>
    </div>

}